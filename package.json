{
  "name": "game-viewer-tool",
  "version": "1.0.0",
  "description": "Game Viewer Tool",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "dev": "nodemon --watch 'api/**/*.ts' --exec 'ts-node' ./api/index.ts",
    "eslint": "./node_modules/.bin/eslint .",
    "db:config": "ts-node ./node_modules/.bin/sequelize-cli --config api/infra/database/config/datasource.config.json",
    "db:migrate": "npm run db:config db:migrate",
    "db:migrate:undo": "npm run db:config db:migrate:undo",
    "db:seed:all": "npm run db:config db:seed:all",
    "db:seed:undo:all": "npm run db:config db:seed:undo:all",
    "db:reset": "npm run db:seed:undo:all && npm run db:migrate:undo && npm run db:migrate && npm run db:seed:all",
    "db:test:setup": "NODE_ENV=test npm run db:config db:migrate",
    "db:test:teardown": "NODE_ENV=test npm run db:config db:migrate:undo",
    "test": "npm run db:test:setup && NODE_ENV=test ./node_modules/.bin/ts-mocha --exit 'test/*.ts' && npm run db:test:teardown && rm ./database_test.sqlite3",
    "format": "prettier --write \"**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json}\"",
    "lint": "eslint ."
  },
  "author": "Voodoo G&A",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.2",
    "express": "^4.18.2",
    "sequelize": "^5.10.0",
    "sequelize-cli": "^6.6.1",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.13.13",
    "@types/sequelize": "^4.28.20",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.27.0",
    "@typescript-eslint/parser": "^8.27.0",
    "chai": "^4.3.8",
    "eslint": "^8.49.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-vue": "^9.17.0",
    "expect": "^29.7.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.5.3",
    "sinon": "^16.0.0",
    "supertest": "^6.3.3",
    "ts-mocha": "^11.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
}
